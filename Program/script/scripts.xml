<?xml version="1.0" encoding="UTF-8"?>
<project name="JPhotoTagger" default="default" basedir=".">
    <description>Helper scripts for developers</description>
    <target name="Create ZIP distribution">
        <exec executable="mkdist.sh" />
    </target>
    <target name="Remove widths and heights from user properties">
        <exec executable="rmsizes.sh" />
    </target>
    <target name="Copy test images">
        <exec executable="copy_test_img.sh" />
    </target>
    <target name="Toggle user dir between test and working data">
        <exec executable="togglesettingsdir.sh" />
    </target>
    <target name="Find unused property keys">
        <exec executable="find_unused_property_keys.sh"/>
    </target>
    <target name="Find missing property keys">
        <exec executable="find_missing_property_keys.sh"/>
    </target>
    <target name="Find not I18N commented strings">
        <exec executable="find_uncommented_i18n_strings.sh"/>
    </target>
    <target name="Create PDF manual, language German">
        <exec executable="create_pdf_user_doc.sh">
            <arg value="de"/>
            <arg value="Handbuch des Programms &quot;JPhotoTagger&quot;"/>
        </exec>
    </target>
</project>
