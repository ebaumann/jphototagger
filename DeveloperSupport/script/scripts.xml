<?xml version="1.0" encoding="UTF-8"?>
<project name="JPhotoTagger" default="default" basedir=".">
    <description>Helper scripts for developers</description>
    <target name="Create ZIP distribution">
        <exec executable="bash">
            <arg value="mkdist.sh" />
        </exec>
    </target>
    <target name="Toggle user dir between test and working data">
        <exec executable="bash">
            <arg value="togglesettingsdir.sh" />
        </exec>
    </target>
    <target name="Create PDF manual, language German">
        <exec executable="bash">
            <arg value="create_html_index_user_doc.sh" />
            <arg value="de"/>
            <arg value="Handbuch des Programms &quot;JPhotoTagger&quot;"/>
        </exec>
        <exec executable="bash">
            <arg value="create_pdf_user_doc.sh" />
            <arg value="de" />
            <arg value="Handbuch des Programms &quot;JPhotoTagger&quot;" />
        </exec>
    </target>
    <target name="Find missing Bundle strings">
        <exec executable="bash">
            <arg value="find_missing_bundle_strings.sh" />
        </exec>
    </target>
    <target name="Compare Line count in Bundles">
        <exec executable="bash">
            <arg value="cmp_line_count._bundle.sh" />
        </exec>
    </target>
</project>
